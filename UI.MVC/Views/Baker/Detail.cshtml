@model dynamic

@{
    ViewData["Title"] = "Baker Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div class="form-group row">
        <label class="font-weight-bold col-sm-3">
            Name
        </label>
        <div class="col-sm-9">
            <input type="text" id="name" class="form-control col-sm-9" minlength="3" required/>
        </div>
        <span style="padding-left: 15px" class="text-danger" id="nameFail"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 font-weight-bold">
            Birthdate
        </label>
        <div class="col-sm-9">
            <input type="text" id="birthdate" class="form-control col-sm-9" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 font-weight-bold">
            Price in €
        </label>
        <div class="col-sm-9">
            <input type="number" id="income" class="form-control col-sm-9" min="1500" max="10000" required/>
        </div>
        <span style="padding-left: 15px" class="text-danger" id="incomeFail"></span>
    </div>
    <div>
        <button class="btn btn-primary" onclick="changeBaker()" id="buttonSave">Save changes</button>
        <span style="padding-left: 15px" class="text-success" id="bakerSuccess"></span>
    </div>
</div>

@section Scripts
{
    <script src="~/js/Bakers/Detail.js" defer></script>
}